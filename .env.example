# Sample Environment Configuration
# Copy this file to .env (for local development) or set these as system environment variables

# Application Configuration
APP_NAME=Foundry Agent Application
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FILE_ENABLED=true
LOGGING_FILE_PATH=logs/application.log

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/foundry_db
DATABASE_USERNAME=foundry_user
DATABASE_PASSWORD=your_password_here
DATABASE_DRIVER=org.postgresql.Driver

# External API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_BASE_URL=https://api.production.com

# Azure Configuration (if using Azure services)
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here

# Feature Flags
FEATURE_EXPERIMENTAL_ENABLED=false
FEATURE_DEBUG_MODE=true
